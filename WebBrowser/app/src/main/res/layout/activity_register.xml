<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:hint="Username"
        android:textSize="30dp"
        android:id="@+id/txtUsernameReg"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/txtUsernameReg"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:hint="Password"
        android:textSize="30dp"
        android:inputType="textPassword"
        android:id="@+id/txtPasswordReg"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/txtPasswordReg"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:hint="Name"
        android:textSize="30dp"
        android:id="@+id/txtNameReg"/>
    <Button
        android:id="@+id/btnRegAccount"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/txtNameReg"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:background="#959595"
        android:text="Đăng ký mới"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20dp" />

</RelativeLayout>